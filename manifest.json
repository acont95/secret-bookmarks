{
    "manifest_version": 3,
    "name": "Firefox Secret Bookmarks",
    "version": "1.0",

    "description": "Encrypt selected bookmarks folders",
  
    "icons": {
      "48": "public/images/book-lock-outline.svg"
    },

    "options_ui": {
      "page": "public/html/options.html"
    },

    "permissions": [
        "bookmarks",
        "tabs",
        "storage"
    ],

    "browser_specific_settings": {
      "gecko": {
        "id": "firefox-secret-bookmarks@org.ac.comaa"
      }
    },

    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
    },

    "action": {
      "default_area": "navbar",
      "default_popup": "public/html/popup.html"
    },

    "background": {
      "scripts": [
        "public/js/jquery/jquery.min.js", 
        "public/js/background-script.js"
      ]
    }
  }
  