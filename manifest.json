{
    "manifest_version": 3,
    "name": "Firefox Secret Bookmarks",
    "version": "1.0",

    "description": "Encrypt selected bookmarks folders.",
  
    "icons": {
      "48": "public/images/border-48.png"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["public/js/borderify.js"]
      }
    ],

    "options_ui": {
      "page": "public/html/options.html"
    },

    "permissions": [
        "bookmarks",
        "tabs",
        "storage"
    ],

    "browser_specific_settings": {
      "gecko": {
        "id": "firefox-secret-bookmarks@org.ac.com"
      }
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
    }

  }
  